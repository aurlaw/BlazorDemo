@attribute [RenderModeInteractiveServer]

@inject ILogger<ThemeChanger> Logger
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage



@code {
    
    [Parameter]
    public EventCallback<string> OnLoad { get; set; }
    
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var theme = await LocalStorage.GetItemAsync<string>("theme");
        Logger.LogInformation("ThemeChanger OnAfterRenderAsync: {Theme}", theme);
        await OnLoad.InvokeAsync(theme);
    }
    
}